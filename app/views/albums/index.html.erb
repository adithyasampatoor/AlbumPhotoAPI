<div class="row">
  <div class="col-xs-12">
    <div class="page-header">
      <h1>Albums</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <% if @albums.size > 0 %>
      <table class="table">
        <thead>
          <tr>
            <th style="width: 70%">Name</th>
            <th style="width: 10%"># of Photos</th>
            <th style="width: 10%">Average Date</th>
            <th style="width: 10%">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @albums.each do |album| %>
            <tr>
              <td><%= link_to album.name, album_path(album.id) %></td>
              <td><%= album.photos.length %></td>
              <td><%= album.average_date %></td>
              <td>
                <%= link_to "Edit", edit_album_path(album.id) %>
                <%= link_to "Delete", album_path(album.id), method: :delete, "data-confirm": "Are you sure?" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        <%= paginate @albums %>
      </div>
    <% else %>
      <p>No albums</p>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to "Create album", new_album_path, class: 'btn btn-large btn-primary' %>
  </div>
</div>
